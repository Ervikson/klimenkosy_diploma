# password: "{{ elasticsearch_password | default('') }}"

setup.kibana:
  host: "http://192.168.3.6 | 192.168.1.4:5601"

logging.level: info
logging.to_files: true
logging.files:
  path: /var/log/filebeat
  name: filebeat.log
  keepfiles: 7
  permissions: 0644